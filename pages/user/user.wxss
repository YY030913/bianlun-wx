.container{
  background: #0dc441;
  width: 100%;
  height: 103rpx;
  text-align: center;
}
.container .left,.container .right{
    width: 50%;
    float: left;
}
.container text{
    display: inline-block;
    width: 134rpx;
    height: 56rpx;
    background: #3dd067;
    color: #a3e9b7;
    float: right;
    font-size: 26rpx;
    margin-top: 23rpx;
    text-align: center;
    line-height: 56rpx;
    border-bottom-left-radius: 26rpx;
    border-top-left-radius:  26rpx;
}
.container .head_select{
    background: #64d985;
    color: #fff;
}
.container .right text{
    float: left;
    border-bottom-left-radius: 0;
    border-top-left-radius: 0;
    border-bottom-right-radius: 26rpx;
    border-top-right-radius: 26rpx;  
}
.fa-angle-down {
  position: absolute;
  width: 30px;
  height: 30px;
}
.fa-angle-down:before {
  font-size: 20px;
  color: #ffffff;
  z-index: 20;
}


.header .user{
  color: #fff;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 2;
}

.header .follower,
.header .following{
  position: absolute;
  top: 20rpx;
  left: 50%;
  width: 100rpx;
}
.header .count{
  font-size: 40rpx;
}
.header .follower{
  margin-left: -200rpx;
}
.header .following{
  margin-left: 100rpx;
}

.header .name{
  margin-top: 4.1%;
  font-size: 18px;
  text-align: center;
}
.header .introduction{
  color: #444;
  font-size: 10px;
  text-align: center;
}


.main{
    height: 100%;
    width: 100%;
    margin-bottom:50px;
}

