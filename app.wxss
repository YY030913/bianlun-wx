.user-item,.cate-item {
    display: flex;
    flex-direction: row;
    margin: 10px;
    justify-content: space-between;
    border-bottom: 1px solid #dedede;
    align-items: center;
}
.part,.subject {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-bottom: 1px solid #dedede;
    align-items: center;
    background: #fff;
    margin-bottom: 12rpx;
    border-top: 1px solid #ccc;
    padding-left: 20px;
    padding-top: 10px;
    padding-bottom: 10px;
    padding-right: 10px;
    overflow: hidden;
}
.border-2-ffffff {
    border: 2px solid #ffffff;
}
.header .info{
  position: relative;
  text-align: center;
  margin-top: 80px;
}
.header .avatar{
  width: 80px;
  height: 80px;
  border-radius: 80px;
  vertical-align: bottom;
}
.user-item .avatar {
    display: flex;
    height: 50px;
    width: 50px;
    padding: 5px;
    border-radus: 50%;
    margint-right: 20px;
}
.user-item .info, .cate-item .info {
    display: flex;
    flex-direction: column;
    padding: 10px;
    justify-content: space-between;
}
.user-item .info .name,.cate-item .info .name {
    font-size: 18px;
    color: #000;
    font-weight: 900;
}
.user-item .info .introduction {
    font-size: 14px;
    color: #333;
}
.user-item .avatar .avatarImg {
    height: 50px;
    width: 50px;
}
.user-item .start{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}
.iScroll .part .start, .iScroll .subject .start  {
    overflow: hidden;
    width: 100%;
}
.user-item .end,.part .end,.subject .end {
    display: flex;
    margin-left: 10px;
}

.part .title, .subject .title {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.part .title .name , .subject .title .name {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 18px;
    color: #000;
    font-weight:900;
}
.part .content, .subject .content {
    font-size: 14px;
    color: #444;
    display: flex;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical; 
    -webkit-line-clamp: 2; 
    line-height: 20px;
    max-height: 40px;
}

.part .title view, .subject .title view {
    display: flex;
}
.user-item .end text{
    padding: 5px;
    background: #dedede;
    color: #000;
}
.subject .extra {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.subject .extra .cancleBtn {
    padding: 5px;
    background: #dedede;
    font-size: 12px;
    white-space: nowrap;
    color: #000;
}

